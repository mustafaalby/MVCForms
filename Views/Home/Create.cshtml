@model Product
 <form asp-controller="Home" asp-action="Create" method="post">
  <div class="form-group">
    <label for="Name"> Name</label>
    <input  asp-for="Name" class="form-control">
  </div>

  <div class="form-group">
    <label for="Description"> Description</label>
    <input  asp-for="Description" class="form-control">
  </div>

  <div class="form-group">
    <label for="Price"> Price</label>
    <input asp-for="Price" class="form-control">
  </div>
  <div class="form-group">
    <label for="Category"> Category</label>
    <select asp-for="Category" class="form-control" asp-items="@new SelectList(Enum.GetNames(typeof(EnumCategory)))">
    <!--<select asp-for="Category" class="form-control" asp-items="@ViewBag.Categories"></select>-->
        <option selected disabled>Select</option>
        
    </select>
  </div>

  <div class="form-check">
  <input class="form-check-input"  asp-for="isApproved">
  <label class="form-check-label" for="isApproved">
    is Approved
  </label>
</div>
    <div>
        <input type="Submit" value="Submit" class="btn btn-primary">
    </div>
</form>